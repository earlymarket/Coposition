    .pure-u-1-12
    /!
    .pure-u-10-12
      .top-menu-left
        = image_tag "copo-logo.png", width: 60, class: "sm-hide"
        h1.brandname Coposition
      .top-menu-right
        label.lg-hide for="mobile-menu"
          i.material-icons menu
        input#mobile-menu checked="checked" type="checkbox"
        ul.dropdown
          li
            = link_to "Users", root_path, class: "dropdown-item current"
          li
            = link_to "Developers", devs_path, class: "dropdown-item"
          - if Rails.env == "test" || params[:admin] || signed_in?
            - if user_signed_in?
              li
                = link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item"
              li
                = link_to "Dashboard", user_dashboard_path(current_user.url_id), class: "dropdown-item"
              li
                = link_to "Devices", user_devices_path(current_user.url_id), class: "dropdown-item"
              li
                = link_to navbar_indicator("Apps", current_user.developer_requests.count), user_apps_path(current_user.url_id), class: "dropdown-item"
              li
                = link_to navbar_indicator("Friends", current_user.friend_requests.count), user_friends_path(current_user.url_id), class: "dropdown-item"
              li
                = link_to "Account", edit_user_registration_path, class: "dropdown-item"
            - else
              li
                = link_to "Log In", new_user_session_path, class: "dropdown-item"
            li
              = link_to "Help", help_path, class: "dropdown-item"
            li
              = link_to "API", "https://earlymarket.github.io/copo-docs/", class: "dropdown-item"
