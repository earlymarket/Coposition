.row
  section.section.col.s12.m6.offset-m3
    = form_for resource, as: resource_name, url: session_path(resource_name) do |f|
      fieldset.card
        .card-content
          legend.card-title
            = resource.class
            |  log in
          .row
            .input-field.col.s12
              = f.label :email, "Your email", class: "active"
              = f.email_field :email, autofocus: true, class: "validate"
          .row
            .input-field.col.s12
              = f.label :password, "Your password"
              = f.password_field :password, autofocus: true, autocomplete: "off"
          .row
            .col.s12
              = f.check_box :remember_me
              = f.label :remember_me
              - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
                = link_to "Forgot your password?", new_password_path(resource_name), class: "right link"
          .row
            .col.s12
              = f.button "Log in", type: "submit", class: "waves-effect waves-light btn"
          .row
            .col.s12
              | Not yet a #{"#{resource.class.to_s.downcase}"}? #{link_to "Sign up!", new_registration_path(resource_name, return_to: params["return_to"]), class: "link"}
= render "application/background"
= render "devise/shared/links"
